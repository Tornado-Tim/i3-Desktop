bindsym $mod+L exec --no-startup-id dbus-send --type=method_call --dest=org.gnome.ScreenSaver /org/gnome/ScreenSaver org.gnome.ScreenSaver.Lock
exec --no-startup-id /usr/bin/gnome-screensaver
