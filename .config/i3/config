#    # You entering in mode where you can choose additional #workspaces
bindsym 1 workspace $ws11; mode "default"
bindsym 3 workspace $ws13; mode "default"
bindsym 4 workspace $ws14; mode "default"
bindsym Return mode "default"
bindsym Escape mode "default"
}

bindsym Ctrl+space mode "Extended Workspaces"

